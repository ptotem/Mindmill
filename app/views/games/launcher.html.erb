<%= content_for :head do %>
    <style type="text/css">
        a, a:link, a:visited, .btn {
            color: black;
            font-size: 18px;
            font-weight: bold;
        }

        body {
            margin: 0 auto;
            margin-top: 40px;
            width: 960px;
            background: url('/assets/curtain.jpg') no-repeat;
            background-size: 100% 100%;
            height: 600px;
            overflow: hidden;
        }
    </style>
<% end %>
<%= image_tag @game.marquee.url(:original), :style => "margin-left:230px;; margin-top:110px;" %>
<div style="margin-left: 340px;">
  <a class="btn btn-danger btn-large" data-backdrop="static" data-toggle="modal" href="#knowmore" >How to Play</a>
  <a class="btn btn-warning btn-large" href="<%= game_screen_path(@game, @game.gnodes.first) %>" >Start the Game</a>
</div>

<div class="modal hide fade" id="knowmore">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">&times;</a>

    <h3>Know More</h3>
  </div>
  <div class="modal-body">
    <%= raw @game.game_type.description %>
  </div>
  <div class="modal-footer">
    <a href="#" class="close" data-dismiss="modal">Close</a>
  </div>
</div>


