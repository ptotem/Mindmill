<%= content_for :head do %>
    <script type="text/javascript">
        $(function () {

            $.ajaxSetup({
                beforeSend:function (xhr) {
                    xhr.setRequestHeader('X-CSRF-Token',
                            $('meta[name="csrf-token"]').attr('content'));
                }
            });

            $('#slider').anythingSlider({
                buildArrows:false,
                delay:1000,
                onSlideComplete:function (slider) {
                    var data = {selection:[], answer:[]};
                    data["selection"].push(slider.currentPage);
                    data["answer"].push(<%= @answers[3].id %>);
                    $.ajax({
                        url:"<%= image_selection_path %>",
                        type:"post",
                        data:JSON.stringify(data),
                        contentType:"application/json",
                        success:function (returning_data) {
                        }
                    });

                }

            });
            $('#slider2').anythingSlider({
                buildArrows:false,
                onSlideComplete:function (slider) {
                    var data = {selection:[], answer:[]};
                    data["selection"].push(slider.currentPage);
                    data["answer"].push(<%= @answers[4].id %>);
                    $.ajax({
                        url:"<%= image_selection_path %>",
                        type:"post",
                        data:JSON.stringify(data),
                        contentType:"application/json",
                        success:function (returning_data) {
                        }
                    });

                }

            });

        })
    </script>
    <style>
        #slider {
            width: 240px;
            height: 180px;

        }

            /* images with caption */
        #slider img {
            width: 180px;
            height: 280px;
            border-radius: 10px;
        }

            /* position the panels so the captions appear correctly */
        #slider .panel {
            position: relative;
        }

            /* captions */
        #slider .caption-top, #slider .caption-right,
        #slider .caption-bottom, #slider .caption-left {
            background: #000;
            color: #fff;
            padding: 10px;
            margin: 0;
            position: relative;
            z-index: 10;
            opacity: .8;
            filter: alpha(opacity = 80);
        }

            /*** Set Slider dimensions here! Version 1.7+ ***/
        #slider {
            /*background: white;*/
            /*width: 300px;*/
            /*height: 300px;*/
            list-style: none;
        }

        #slider li {
            position: relative;
        }


    </style>

    <style>
        #slider2 {
