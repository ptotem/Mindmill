    <style type="text/css">

        body {
            background: transparent;
        }

        #poster {
            margin-top: 20px;
            position: relative;
            float: right;
            width: 500px;
            height: 560px;
            border: 6px solid black;
            border-radius: 10px;
            background: black;
        }

        .section {
            position: absolute;
            padding: 10px;
        }

        #main {
            left: 0px;
